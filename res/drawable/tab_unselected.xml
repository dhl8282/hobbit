<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Bottom shadow -->
    <item
        android:left="0dp"
        android:right="0dp">
        
        <shape android:shape="rectangle">
            <padding
                android:top="0dp"
                android:bottom="1dp"
                android:right="0dp"
                android:left="0dp"/>
            <solid android:color="#ff6d51"/>
        </shape>
        
    </item>
    
    <!-- White top color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>
