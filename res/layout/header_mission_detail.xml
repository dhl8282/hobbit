<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#fff" >
    
    <TextView
        android:id="@+id/textview_header_mission_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason why you can&apos;t wake up"
        android:textColor="#454545"
        android:textSize="18sp" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#454545"
        android:padding="2dp" >
        
        <LinearLayout
            android:id="@+id/layout_header_mission_detail_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/button_header_mission_detail_like"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:src="@drawable/d_likeicon" />
            
            <ImageView
                android:id="@+id/button_header_mission_detail_keep"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/d_keepicon" />
            
            <ImageView
                android:id="@+id/button_header_mission_detail_response"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/d_replyicon" />
            
            <ImageView
                android:id="@+id/button_header_mission_detail_share"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/d_shareicon" />
            
        </LinearLayout>
        
        <ImageView
            android:id="@+id/imageview_header_mission_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/layout_header_mission_detail_buttons"
            android:scaleType="centerCrop"
            android:src="@drawable/dummyphoto" />
        
    </RelativeLayout>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/descriptionicon"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="1dp"
        android:background="#d8d8d7" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f3f3f3"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/likeicon"/>
            
            <TextView
                android:id="@+id/textview_header_mission_detail_likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="298"
                android:textColor="#454545" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" people like this mission"
                android:textColor="#454545" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layout_header_mission_detail_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#d8d8d7" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#f3f3f3"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp" >
        
        <TextView
            android:id="@+id/textview_header_mission_detail_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Use your fingers to push your friend&apos;s head. It must be fun! XD"
            android:textColor="#1b1b1b" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal" >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/textview_header_mission_detail_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Yellowknife, Canada"
                    android:textColor="#1b1b1b"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/textview_header_mission_detail_creator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="by na0000yi"
                    android:textColor="#b1b0ae" />
                
            </LinearLayout>
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_launcher" />
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/textview_header_mission_detail_created_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2014.02.18 WED AM 07:48"
            android:textColor="#606060" />
        
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#d8d8d7" />
    
    <LinearLayout
        android:id="@+id/layout_header_mission_detail_tags"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f3f3f3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/entertainicon"/>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/entertainicon"/>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/entertainicon"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment_icon"/>
        
        <TextView
            android:id="@+id/textview_header_mission_detail_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"/>
        
    </LinearLayout>
    
</LinearLayout>
