<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/popup_select_quest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#fd6e57"
        android:textSize="20sp"
        android:text="Select Quests"/>
    
    <View 
        android:id="@+id/popup_select_quest_upperline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/popup_select_quest_title"
        android:background="#fd6e57"/>
    
    <LinearLayout 
        android:id="@+id/popup_select_quest_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#555555"
            android:text="Cancel"/>
        
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#fd6e57"
            android:text="Done"/>
        
    </LinearLayout>
    
    <View
        android:id="@+id/popup_select_quest_bottomline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/popup_select_quest_bottom_buttons"
        android:background="#fd6e57"/>
    
    <ListView
        android:id="@+id/popup_select_quest_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_select_quest_upperline"
        android:layout_above="@id/popup_select_quest_bottomline"/>

</RelativeLayout>
